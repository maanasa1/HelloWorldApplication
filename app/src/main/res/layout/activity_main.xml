<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_maroon"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70sp"
        android:text="Hello from Maanasa!"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/button"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@color/peach"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="Change Text Color"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/changeBackground"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/peach"
        android:padding="10dp"
        android:text="Change View Color"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/changeText"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeBackground"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/peach"
        android:padding="10dp"
        android:text="Change Text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeCustomText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:ems="12"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:hint="Create your own text!" />

    <TextView
        android:id="@+id/changeCustomText"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeText"
        android:layout_centerHorizontal="true"
        android:background="@color/peach"
        android:padding="10dp"
        android:text="Change Custom Text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp" />

</RelativeLayout>